<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.chutc_000.calculator.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="50dp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="AC"
        android:id="@+id/ACButton"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="+/-"
        android:id="@+id/plusMinusButton"
        android:layout_alignTop="@+id/ACButton"
        android:layout_toEndOf="@+id/ACButton" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="%"
        android:id="@+id/percentButton"
        android:layout_alignTop="@+id/plusMinusButton"
        android:layout_toEndOf="@+id/plusMinusButton" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="/"
        android:id="@+id/divideButton"
        android:layout_alignTop="@+id/percentButton"
        android:layout_toEndOf="@+id/percentButton" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="7"
        android:id="@+id/sevenButton"
        android:layout_below="@+id/ACButton"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="8"
        android:id="@+id/eightButton"
        android:layout_alignTop="@+id/sevenButton"
        android:layout_toEndOf="@+id/sevenButton" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="9"
        android:id="@+id/nineButton"
        android:layout_alignTop="@+id/eightButton"
        android:layout_toEndOf="@+id/eightButton" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="x"
        android:id="@+id/multiplyButton"
        android:layout_alignTop="@+id/nineButton"
        android:layout_toEndOf="@+id/nineButton" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="4"
        android:id="@+id/fourButton"
        android:layout_below="@+id/sevenButton"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="5"
        android:id="@+id/fiveButton"
        android:layout_below="@+id/sevenButton"
        android:layout_toEndOf="@+id/fourButton" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="6"
        android:id="@+id/sixButton"
        android:layout_below="@+id/eightButton"
        android:layout_toEndOf="@+id/fiveButton" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="-"
        android:id="@+id/minusButton"
        android:layout_below="@+id/nineButton"
        android:layout_toEndOf="@+id/sixButton" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="1"
        android:id="@+id/oneButton"
        android:layout_below="@+id/fourButton"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="2"
        android:id="@+id/twoButton"
        android:layout_below="@+id/fourButton"
        android:layout_toEndOf="@+id/oneButton" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="3"
        android:id="@+id/threeButton"
        android:layout_below="@+id/sixButton"
        android:layout_toEndOf="@+id/twoButton" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="+"
        android:id="@+id/plusButton"
        android:layout_below="@+id/sixButton"
        android:layout_toEndOf="@+id/threeButton" />

    <Button
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:text="0"
        android:id="@+id/zeroButton"
        android:layout_below="@+id/oneButton"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="."
        android:id="@+id/decimalButton"
        android:layout_below="@+id/threeButton"
        android:layout_toEndOf="@+id/zeroButton" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="="
        android:id="@+id/equalsButton"
        android:layout_below="@+id/threeButton"
        android:layout_toEndOf="@+id/decimalButton" />

</RelativeLayout>
